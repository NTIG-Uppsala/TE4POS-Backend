[Unit]
Description=ASP.NET Core API
After=network.target

[Service]
WorkingDirectory=/TE4POS-Backend/publish
ExecStart=/usr/bin/dotnet /TE4POS-Backend/publish/TE4POS.dll
SyslogIdentifier=StockAPI

Restart=always
RestartSec=5

Environment=ASPNETCORE_ENVIRONMENT=Production
Environment=ASPNETCORE_URLS=http://0.0.0.0:3000

[Install]
WantedBy=multi-user.target